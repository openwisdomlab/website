---
import { SITE } from '~/config';
import { getCanonical, getPermalink } from '~/utils/permalinks';
import Layout from '~/layouts/PageLayout.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const meta = {
	title: '特色活动 | ' + SITE.title,
	description: '探索猫头鹰实验室的特色活动：X-Camp科研训练营和猫头鹰奇妙夜文化活动',
	canonical: getCanonical(getPermalink('/activities')),
};
---

<Layout {meta}>
	<!-- 页面标题区域 -->
	<section class="relative py-20 overflow-hidden bg-gradient-to-b from-black/0 via-primary-500/10 to-black/0 dark:from-black/0 dark:via-primary-500/10 dark:to-black/0">
		<div class="max-w-6xl mx-auto px-4 sm:px-6 relative z-10">
			<div class="text-center">
				<div class="font-mono text-xs text-primary-400 uppercase tracking-widest mb-6" data-aos="fade-up">
					[ FEATURED ACTIVITIES ]
				</div>
				<h1
					class="text-5xl md:text-6xl font-black text-white mb-6 font-display"
					data-aos="fade-up"
				>
					<span data-i18n="page.activities.title">特色活动</span>
				</h1>
				<p
					class="text-xl text-gray-300 dark:text-gray-400 max-w-3xl mx-auto"
					data-aos="fade-up"
					data-aos-delay="200"
					data-i18n="page.activities.subtitle"
				>
					科技与人文交融，探索与创造同行
				</p>
			</div>
		</div>
		<!-- 装饰性背景元素 -->
		<div class="absolute top-1/2 left-1/4 w-64 h-64 bg-primary-500/5 rounded-full filter blur-3xl -translate-y-1/2"></div>
		<div class="absolute top-1/2 right-1/4 w-64 h-64 bg-accent-500/5 rounded-full filter blur-3xl -translate-y-1/2"></div>
	</section>

	<!-- X-Camp 科研训练营 -->
	<section class="relative py-24 overflow-hidden">
		<div class="max-w-6xl mx-auto px-4 sm:px-6">
			<div class="grid lg:grid-cols-2 gap-12 items-center">
				<div data-aos="fade-right">
					<div class="inline-flex items-center gap-2 px-4 py-2 bg-tech-500/10 border border-tech-500/20 rounded-full mb-6">
						<span class="w-2 h-2 bg-tech-400 rounded-full animate-pulse"></span>
						<span class="text-tech-400 font-mono text-sm uppercase tracking-wider">X-Camp</span>
					</div>
					<h2 class="text-4xl md:text-5xl font-black text-white mb-6 font-display">
						X-Camp<br/>
						<span class="text-transparent bg-clip-text bg-gradient-to-r from-tech-400 to-secondary-400">
							科研训练营
						</span>
					</h2>
					<p class="text-lg text-gray-300 mb-6 leading-relaxed">
						X-Camp是猫头鹰实验室的沉浸式科研训练项目，让学生深入体验真实的科研过程。
						在这里，学生将与科学家和研究者一起工作，参与前沿课题研究，培养科研思维和创新能力。
					</p>
					<ul class="space-y-4 text-gray-400">
						<li class="flex items-start gap-3">
							<span class="flex-shrink-0 w-6 h-6 bg-tech-500/20 rounded-full flex items-center justify-center mt-0.5">
								<span class="text-tech-400 text-sm">1</span>
							</span>
							<span><strong class="text-white">真实科研项目</strong> - 参与实际科研课题，体验完整研究过程</span>
						</li>
						<li class="flex items-start gap-3">
							<span class="flex-shrink-0 w-6 h-6 bg-tech-500/20 rounded-full flex items-center justify-center mt-0.5">
								<span class="text-tech-400 text-sm">2</span>
							</span>
							<span><strong class="text-white">导师一对一指导</strong> - 来自清华、北大等顶尖高校的研究专家</span>
						</li>
						<li class="flex items-start gap-3">
							<span class="flex-shrink-0 w-6 h-6 bg-tech-500/20 rounded-full flex items-center justify-center mt-0.5">
								<span class="text-tech-400 text-sm">3</span>
							</span>
							<span><strong class="text-white">跨学科融合</strong> - 人工智能、生物科技、航天等多领域探索</span>
						</li>
						<li class="flex items-start gap-3">
							<span class="flex-shrink-0 w-6 h-6 bg-tech-500/20 rounded-full flex items-center justify-center mt-0.5">
								<span class="text-tech-400 text-sm">4</span>
							</span>
							<span><strong class="text-white">成果展示</strong> - 论文发表、专利申请、学术会议报告机会</span>
						</li>
					</ul>
				</div>
				<div class="relative" data-aos="fade-left">
					<div class="relative aspect-square bg-gradient-to-br from-tech-500/20 to-secondary-500/20 rounded-2xl border border-white/10 p-8 flex items-center justify-center">
						<div class="text-center">
							<div class="text-8xl font-black text-transparent bg-clip-text bg-gradient-to-r from-tech-400 to-secondary-400 mb-4">
								X
							</div>
							<div class="text-2xl font-bold text-white mb-2">CAMP</div>
							<div class="text-sm text-gray-400 font-mono">RESEARCH TRAINING</div>
						</div>
						<!-- 装饰性元素 -->
						<div class="absolute top-4 right-4 w-20 h-20 border border-tech-500/30 rounded-full"></div>
						<div class="absolute bottom-4 left-4 w-16 h-16 border border-secondary-500/30 rounded-lg rotate-45"></div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- 猫头鹰奇妙夜 -->
	<section class="relative py-24 overflow-hidden bg-gradient-to-b from-black/0 via-accent-500/5 to-black/0">
		<div class="max-w-6xl mx-auto px-4 sm:px-6">
			<div class="grid lg:grid-cols-2 gap-12 items-center">
				<div class="order-2 lg:order-1 relative" data-aos="fade-right">
					<div class="relative aspect-square bg-gradient-to-br from-accent-500/20 to-primary-500/20 rounded-2xl border border-white/10 p-8 flex items-center justify-center">
						<div class="text-center">
							<div class="text-6xl mb-4">
								🦉
							</div>
							<div class="text-2xl font-black text-white mb-2">Night at OWL</div>
							<div class="text-sm text-accent-400 font-mono">猫头鹰奇妙夜</div>
							<div class="mt-4 text-xs text-gray-500 italic max-w-xs mx-auto">
								"让思维有地方闲逛，让想象力在无意中开花"
							</div>
						</div>
						<!-- 装饰性元素 -->
						<div class="absolute top-4 left-4 w-12 h-12 border border-accent-500/30 rounded-full animate-pulse"></div>
						<div class="absolute bottom-4 right-4 w-8 h-8 bg-primary-500/20 rounded-full"></div>
						<!-- 星星装饰 -->
						<div class="absolute top-8 right-8 text-accent-400 text-xl animate-bounce" style="animation-delay: 0.5s;">✦</div>
						<div class="absolute bottom-12 left-8 text-primary-400 text-sm animate-bounce" style="animation-delay: 1s;">✧</div>
					</div>
				</div>
				<div class="order-1 lg:order-2" data-aos="fade-left">
					<div class="inline-flex items-center gap-2 px-4 py-2 bg-accent-500/10 border border-accent-500/20 rounded-full mb-6">
						<span class="w-2 h-2 bg-accent-400 rounded-full animate-pulse"></span>
						<span class="text-accent-400 font-mono text-sm uppercase tracking-wider">Night at OWL</span>
					</div>
					<h2 class="text-4xl md:text-5xl font-black text-white mb-6 font-display">
						猫头鹰奇妙夜<br/>
						<span class="text-transparent bg-clip-text bg-gradient-to-r from-accent-400 to-primary-400">
							Night at OWL
						</span>
					</h2>
					<p class="text-lg text-gray-300 mb-6 leading-relaxed">
						「猫头鹰奇妙夜」是零一学院猫头鹰实验室的特色文化活动，以科技和人文艺术结合的主题，
						多元化和富有想象力的活动形式受到了老师和学生的一致欢迎。
					</p>
					<p class="text-gray-400 mb-6 leading-relaxed">
						轻松而有趣的活动形式不仅促进了大家思维的连接，
						也打破了人们对"天才学生"和科学家群体的固有认知。我们致力于创造一个对于创新友好的环境，
						在清华钱班拔尖创新人才培养10多年探索的背后，钱班和零一文化得以在猫头鹰奇妙夜里充分展示和绽放。
					</p>
					<div class="bg-accent-500/10 border border-accent-500/20 rounded-xl p-6 mb-6">
						<blockquote class="text-accent-300 italic text-lg">
							"让思维有地方闲逛，让想象力在无意中开花"
						</blockquote>
						<p class="text-gray-500 text-sm mt-2">—— 猫头鹰奇妙夜标语</p>
					</div>
					<div class="flex flex-wrap gap-3">
						<span class="px-4 py-2 bg-white/5 border border-white/10 rounded-full text-sm text-gray-300">
							#科技与人文
						</span>
						<span class="px-4 py-2 bg-white/5 border border-white/10 rounded-full text-sm text-gray-300">
							#创意思维
						</span>
						<span class="px-4 py-2 bg-white/5 border border-white/10 rounded-full text-sm text-gray-300">
							#跨界交流
						</span>
						<span class="px-4 py-2 bg-white/5 border border-white/10 rounded-full text-sm text-gray-300">
							#轻松有趣
						</span>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- 活动特色 -->
	<section class="relative py-24 overflow-hidden">
		<div class="max-w-6xl mx-auto px-4 sm:px-6">
			<div class="text-center mb-16">
				<h2 class="text-3xl md:text-4xl font-black text-white mb-4 font-display" data-aos="fade-up">
					活动特色
				</h2>
				<p class="text-gray-400 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="100">
					我们的活动融合科技与人文，注重体验与互动，让每一次参与都成为难忘的成长经历
				</p>
			</div>

			<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
				<!-- 特色卡片 1 -->
				<div class="group relative bg-white/5 border border-white/10 rounded-xl p-6 hover:border-primary-500/50 transition-all duration-300" data-aos="fade-up" data-aos-delay="0">
					<div class="w-12 h-12 bg-primary-500/20 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
						<span class="text-2xl">🎨</span>
					</div>
					<h3 class="text-lg font-bold text-white mb-2">科技与艺术融合</h3>
					<p class="text-gray-400 text-sm">打破传统学科边界，让科技与人文艺术碰撞出创意火花</p>
				</div>

				<!-- 特色卡片 2 -->
				<div class="group relative bg-white/5 border border-white/10 rounded-xl p-6 hover:border-tech-500/50 transition-all duration-300" data-aos="fade-up" data-aos-delay="100">
					<div class="w-12 h-12 bg-tech-500/20 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
						<span class="text-2xl">🧠</span>
					</div>
					<h3 class="text-lg font-bold text-white mb-2">思维连接</h3>
					<p class="text-gray-400 text-sm">促进不同背景学生之间的交流，激发思维碰撞与创新灵感</p>
				</div>

				<!-- 特色卡片 3 -->
				<div class="group relative bg-white/5 border border-white/10 rounded-xl p-6 hover:border-accent-500/50 transition-all duration-300" data-aos="fade-up" data-aos-delay="200">
					<div class="w-12 h-12 bg-accent-500/20 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
						<span class="text-2xl">🌟</span>
					</div>
					<h3 class="text-lg font-bold text-white mb-2">轻松有趣</h3>
					<p class="text-gray-400 text-sm">摒弃严肃刻板的形式，在轻松愉快的氛围中学习成长</p>
				</div>

				<!-- 特色卡片 4 -->
				<div class="group relative bg-white/5 border border-white/10 rounded-xl p-6 hover:border-secondary-500/50 transition-all duration-300" data-aos="fade-up" data-aos-delay="300">
					<div class="w-12 h-12 bg-secondary-500/20 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
						<span class="text-2xl">🚀</span>
					</div>
					<h3 class="text-lg font-bold text-white mb-2">创新友好</h3>
					<p class="text-gray-400 text-sm">营造对创新友好的环境，鼓励大胆尝试和自由探索</p>
				</div>
			</div>
		</div>
	</section>

	<!-- 行动号召 -->
	<CallToAction />
</Layout>
