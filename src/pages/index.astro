---
import { SITE } from '~/config';
import { getCanonical, getHomePermalink, getPermalink } from '~/utils/permalinks';
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';

// React 组件导入
import { CyberButton, CyberCard, GlitchText, ScrollReveal, GridBackground, FloatingElements, HolographicBorder, NoiseOverlay } from '~/components/ui/cyber';
import MagneticButton from '~/components/ui/MagneticButton';
import TerminalText from '~/components/ui/TerminalText';
import ActivityGallery from '~/components/widgets/ActivityGallery.astro';

const meta = {
	title: SITE.title,
	description: SITE.description,
	canonical: getCanonical(getHomePermalink()),
};
---

<Layout {meta}>
	<!-- 全局噪点纹理 -->
	<NoiseOverlay client:load opacity={0.02} />

	<!-- ==================== HERO SECTION ==================== -->
	<section class="relative min-h-screen flex items-center overflow-hidden bg-cyber-black">
		<!-- 动态网格背景 -->
		<GridBackground client:load variant="cyber" animated />

		<!-- 浮动元素 -->
		<FloatingElements client:load count={15} />

		<!-- 扫描线效果 -->
		<div class="absolute inset-0 pointer-events-none overflow-hidden">
			<div class="absolute inset-0 bg-scanlines opacity-10"></div>
			<div class="absolute inset-x-0 h-[2px] bg-gradient-to-r from-transparent via-neon-purple/50 to-transparent animate-scan-fast"></div>
		</div>

		<!-- 光晕效果 -->
		<div class="absolute top-0 left-1/4 w-[600px] h-[600px] bg-neon-purple/10 rounded-full filter blur-[150px] animate-pulse-slow"></div>
		<div class="absolute bottom-0 right-1/4 w-[500px] h-[500px] bg-neon-blue/10 rounded-full filter blur-[150px] animate-pulse-slow" style="animation-delay: 1s;"></div>

		<div class="relative max-w-7xl mx-auto px-4 sm:px-6 py-20 z-10 w-full">
			<!-- 不对称布局 -->
			<div class="grid lg:grid-cols-12 gap-8 lg:gap-12 items-center">
				<!-- 左侧主内容 -->
				<div class="lg:col-span-7 space-y-8">
					<!-- 状态指示器 -->
					<ScrollReveal client:visible variant="slide-right" delay={0}>
						<div class="flex items-center gap-4 font-mono text-xs uppercase tracking-widest">
							<span class="px-4 py-2 bg-neon-green/10 text-neon-green border border-neon-green/30 flex items-center gap-2
								shadow-glow-green">
								<span class="w-2 h-2 bg-neon-green rounded-full animate-pulse"></span>
								SYSTEM.ONLINE
							</span>
							<span class="text-gray-600 hidden sm:inline">// V3.0_ALPHA</span>
						</div>
					</ScrollReveal>

					<!-- 主标题 - 超大字体 + 故障效果 -->
					<ScrollReveal client:visible variant="brutal" delay={0.1}>
						<div class="space-y-2">
							<h1 class="font-display font-black text-7xl sm:text-8xl md:text-9xl lg:text-[10rem] leading-none tracking-tighter">
								<GlitchText
									client:visible
									variant="rgb"
									triggerOnHover
									className="block text-white"
								>
									猫头鹰
								</GlitchText>
							</h1>
							<h1 class="font-display font-black text-6xl sm:text-7xl md:text-8xl lg:text-9xl leading-none tracking-tighter">
								<span class="text-transparent bg-gradient-neon bg-clip-text bg-[length:200%_auto] animate-holographic">
									实验室
								</span>
							</h1>
						</div>
					</ScrollReveal>

					<!-- 英文副标题 - 霓虹风格 -->
					<ScrollReveal client:visible variant="slide-up" delay={0.2}>
						<div class="relative inline-block group">
							<HolographicBorder client:visible borderWidth={1} glowIntensity="low">
								<div class="px-6 py-3 bg-cyber-black">
									<span class="font-mono text-lg sm:text-xl md:text-2xl font-bold tracking-[0.3em] uppercase text-white">
										OPEN<span class="text-neon-purple">_</span>WISDOM<span class="text-neon-blue">_</span>LAB
									</span>
								</div>
							</HolographicBorder>
						</div>
					</ScrollReveal>

					<!-- 描述文字 - 终端风格 -->
					<ScrollReveal client:visible variant="slide-up" delay={0.3}>
						<div class="max-w-2xl space-y-4">
							<div class="bg-black/60 backdrop-blur-xl border border-neon-green/20 rounded-none p-4 font-mono">
								<div class="flex items-center gap-2 mb-3 text-xs text-gray-600">
									<span class="text-neon-green">$</span>
									<span>cat mission.txt</span>
								</div>
								<p class="text-gray-300 text-sm sm:text-base leading-relaxed">
									一个<span class="text-neon-purple font-bold px-1 bg-neon-purple/10">开放</span>、
									<span class="text-neon-blue font-bold px-1 bg-neon-blue/10">包容</span>、
									<span class="text-neon-green font-bold px-1 bg-neon-green/10">创新</span>的学习空间。
									<br class="hidden sm:block"/>
									让有好奇心的人、天马行空的想法和有趣的问题在此
									<span class="text-neon-pink font-bold">汇聚</span>和
									<span class="text-neon-yellow font-bold">激发</span>。
								</p>
							</div>

							<!-- 打字机效果 -->
							<div class="font-mono text-xs text-gray-500">
								<TerminalText
									client:visible
									text="> Explore the unknown, create the future..."
									speed={50}
									className="text-neon-green/70"
								/>
							</div>
						</div>
					</ScrollReveal>

					<!-- CTA 按钮组 - Neo-Brutalism 风格 -->
					<ScrollReveal client:visible variant="slide-up" delay={0.4}>
						<div class="flex flex-wrap gap-4 items-center pt-4">
							<CyberButton
								client:visible
								href={getPermalink('/about')}
								variant="brutal"
								size="lg"
							>
								<Icon name="tabler:rocket" class="w-5 h-5" />
								探索世界
							</CyberButton>

							<CyberButton
								client:visible
								href={getPermalink('/contact')}
								variant="outline"
								size="lg"
							>
								<Icon name="tabler:mail" class="w-5 h-5" />
								联系我们
							</CyberButton>
						</div>
					</ScrollReveal>

					<!-- 统计数据 - 科技感 -->
					<ScrollReveal client:visible variant="fade" delay={0.5}>
						<div class="hidden md:flex items-center gap-8 pt-8">
							<div class="group">
								<div class="font-mono text-4xl font-black text-neon-purple group-hover:animate-glitch">
									1000<span class="text-neon-pink">+</span>
								</div>
								<div class="font-mono text-xs text-gray-600 uppercase tracking-wider">Projects.created</div>
							</div>
							<div class="w-[2px] h-16 bg-gradient-to-b from-transparent via-neon-purple/50 to-transparent"></div>
							<div class="group">
								<div class="font-mono text-4xl font-black text-neon-blue group-hover:animate-glitch">
									50<span class="text-neon-green">+</span>
								</div>
								<div class="font-mono text-xs text-gray-600 uppercase tracking-wider">Members.active</div>
							</div>
							<div class="w-[2px] h-16 bg-gradient-to-b from-transparent via-neon-blue/50 to-transparent"></div>
							<div class="group">
								<div class="font-mono text-4xl font-black text-neon-green group-hover:animate-glitch">
									∞
								</div>
								<div class="font-mono text-xs text-gray-600 uppercase tracking-wider">Ideas.unlimited</div>
							</div>
						</div>
					</ScrollReveal>
				</div>

				<!-- 右侧装饰 - 猫头鹰图形 -->
				<div class="lg:col-span-5 relative hidden lg:flex items-center justify-center">
					<ScrollReveal client:visible variant="scale" delay={0.3}>
						<div class="relative w-full aspect-square max-w-md">
							<!-- 外圈光环 -->
							<div class="absolute inset-0 rounded-full border-2 border-neon-purple/20 animate-spin-slower"></div>
							<div class="absolute inset-4 rounded-full border border-neon-blue/10 animate-spin-reverse"></div>

							<!-- 中心猫头鹰符号 -->
							<div class="absolute inset-0 flex items-center justify-center">
								<div class="relative">
									<!-- 眼睛 -->
									<div class="flex gap-8">
										<div class="w-20 h-20 rounded-full bg-gradient-to-br from-neon-blue to-neon-green
											shadow-glow-cyan animate-pulse-slow flex items-center justify-center">
											<div class="w-8 h-10 bg-cyber-black rounded-full"></div>
										</div>
										<div class="w-20 h-20 rounded-full bg-gradient-to-br from-neon-purple to-neon-pink
											shadow-neon animate-pulse-slow flex items-center justify-center" style="animation-delay: 0.5s;">
											<div class="w-8 h-10 bg-cyber-black rounded-full"></div>
										</div>
									</div>

									<!-- 装饰线条 -->
									<div class="absolute -top-20 left-1/2 -translate-x-1/2 w-[2px] h-16
										bg-gradient-to-b from-neon-purple to-transparent"></div>
									<div class="absolute -bottom-16 left-1/2 -translate-x-1/2">
										<div class="w-0 h-0 border-l-[15px] border-r-[15px] border-t-[25px]
											border-l-transparent border-r-transparent border-t-neon-yellow"></div>
									</div>
								</div>
							</div>

							<!-- 浮动粒子 -->
							<div class="absolute top-10 right-10 w-4 h-4 bg-neon-green rounded-full animate-float opacity-60"></div>
							<div class="absolute bottom-20 left-10 w-3 h-3 bg-neon-pink rounded-full animate-float-slow opacity-60"></div>
							<div class="absolute top-1/2 right-0 w-2 h-2 bg-neon-blue rounded-full animate-float-fast opacity-60"></div>
						</div>
					</ScrollReveal>
				</div>
			</div>
		</div>

		<!-- 滚动指示器 -->
		<div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-3">
			<span class="font-mono text-xs text-gray-600 uppercase tracking-widest animate-pulse">scroll.down</span>
			<div class="w-6 h-10 border-2 border-neon-purple/30 rounded-full flex justify-center pt-2">
				<div class="w-1 h-3 bg-neon-purple rounded-full animate-bounce"></div>
			</div>
		</div>
	</section>

	<!-- ==================== 核心价值 SECTION ==================== -->
	<section class="relative py-32 overflow-hidden bg-cyber-black">
		<!-- 背景 -->
		<div class="absolute inset-0 bg-grid bg-grid opacity-30"></div>
		<div class="absolute top-0 left-0 w-full h-32 bg-gradient-to-b from-cyber-black to-transparent"></div>

		<div class="relative max-w-7xl mx-auto px-4 sm:px-6 z-10">
			<!-- Section Header - 不对称 -->
			<ScrollReveal client:visible variant="slide-right">
				<div class="mb-20 max-w-4xl">
					<div class="font-mono text-sm text-neon-green uppercase tracking-widest mb-4 flex items-center gap-2">
						<span class="w-8 h-[2px] bg-neon-green"></span>
						CORE::VALUES
					</div>
					<h2 class="font-display font-black text-5xl sm:text-6xl md:text-7xl text-white mb-6">
						核心<span class="text-transparent bg-gradient-cyber bg-clip-text">价值</span>
					</h2>
					<p class="text-xl text-gray-400 font-mono">
						// 培养面向未来的创新人才
					</p>
				</div>
			</ScrollReveal>

			<!-- 价值卡片 - 不对称网格 -->
			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
				<!-- 卡片 1 - 问题驱动学习 -->
				<ScrollReveal client:visible variant="brutal" delay={0}>
					<CyberCard client:visible variant="terminal" className="h-full">
						<div class="space-y-4">
							<div class="flex items-start justify-between">
								<div class="w-14 h-14 bg-neon-purple/10 border border-neon-purple/30 flex items-center justify-center
									shadow-neon">
									<Icon name="tabler:question-mark" class="w-7 h-7 text-neon-purple" />
								</div>
								<span class="font-mono text-xs text-neon-green">001</span>
							</div>
							<h3 class="font-display text-2xl font-bold text-white">
								问题驱动学习
							</h3>
							<p class="text-gray-400 text-sm leading-relaxed font-mono">
								从真实问题出发，在探索中学习，在解决问题中成长。
								<span class="text-neon-purple">Learning by questioning.</span>
							</p>
							<div class="pt-2">
								<div class="h-[2px] w-full bg-gradient-to-r from-neon-purple via-neon-blue to-transparent"></div>
							</div>
						</div>
					</CyberCard>
				</ScrollReveal>

				<!-- 卡片 2 - 跨学科融合 -->
				<ScrollReveal client:visible variant="brutal" delay={0.1}>
					<CyberCard client:visible variant="neon" className="h-full">
						<div class="space-y-4">
							<div class="flex items-start justify-between">
								<div class="w-14 h-14 bg-neon-blue/10 border border-neon-blue/30 flex items-center justify-center
									shadow-glow-cyan">
									<Icon name="tabler:atom-2" class="w-7 h-7 text-neon-blue" />
								</div>
								<span class="font-mono text-xs text-neon-blue">002</span>
							</div>
							<h3 class="font-display text-2xl font-bold text-white">
								跨学科融合
							</h3>
							<p class="text-gray-400 text-sm leading-relaxed font-mono">
								打破学科边界，培养综合思维和创新能力。
								<span class="text-neon-blue">Cross-disciplinary thinking.</span>
							</p>
							<div class="pt-2">
								<div class="h-[2px] w-full bg-gradient-to-r from-neon-blue via-neon-green to-transparent"></div>
							</div>
						</div>
					</CyberCard>
				</ScrollReveal>

				<!-- 卡片 3 - 实践导向 -->
				<ScrollReveal client:visible variant="brutal" delay={0.2}>
					<CyberCard client:visible variant="glass" className="h-full">
						<div class="space-y-4">
							<div class="flex items-start justify-between">
								<div class="w-14 h-14 bg-neon-green/10 border border-neon-green/30 flex items-center justify-center
									shadow-glow-green">
									<Icon name="tabler:tool" class="w-7 h-7 text-neon-green" />
								</div>
								<span class="font-mono text-xs text-neon-green">003</span>
							</div>
							<h3 class="font-display text-2xl font-bold text-white">
								实践导向
							</h3>
							<p class="text-gray-400 text-sm leading-relaxed font-mono">
								动手实践，在做中学，培养解决实际问题的能力。
								<span class="text-neon-green">Hands-on learning.</span>
							</p>
							<div class="pt-2">
								<div class="h-[2px] w-full bg-gradient-to-r from-neon-green via-neon-yellow to-transparent"></div>
							</div>
						</div>
					</CyberCard>
				</ScrollReveal>
			</div>
		</div>
	</section>

	<!-- ==================== 空间理念 SECTION ==================== -->
	<section class="relative py-32 overflow-hidden">
		<!-- 渐变背景 -->
		<div class="absolute inset-0 bg-gradient-to-b from-cyber-black via-primary-950/30 to-cyber-black"></div>
		<div class="absolute inset-0 bg-grid-dots bg-grid-dots opacity-30"></div>

		<div class="relative max-w-7xl mx-auto px-4 sm:px-6 z-10">
			<!-- Section Header - 居中 -->
			<ScrollReveal client:visible variant="scale">
				<div class="text-center mb-20">
					<div class="font-mono text-sm text-neon-pink uppercase tracking-widest mb-4">
						[ DESIGN_PHILOSOPHY ]
					</div>
					<h2 class="font-display font-black text-5xl sm:text-6xl md:text-7xl text-white mb-6">
						空间<span class="text-transparent bg-gradient-holographic-alt bg-clip-text">理念</span>
					</h2>
					<p class="text-xl text-gray-400 max-w-2xl mx-auto">
						猫头鹰实验室的设计核心理念
					</p>
				</div>
			</ScrollReveal>

			<!-- 理念卡片 - 2x2 + 1 布局 -->
			<div class="grid md:grid-cols-2 gap-6 max-w-5xl mx-auto">
				<!-- 理念 1 -->
				<ScrollReveal client:visible variant="slide-right" delay={0}>
					<CyberCard client:visible variant="holographic" tiltEnabled className="h-full">
						<div class="flex items-start gap-4">
							<div class="w-16 h-16 bg-gradient-to-br from-neon-purple/20 to-neon-pink/20 border border-neon-purple/30
								rounded-xl flex items-center justify-center flex-shrink-0">
								<Icon name="tabler:users" class="w-8 h-8 text-neon-purple" />
							</div>
							<div class="space-y-2">
								<h3 class="font-display text-xl font-bold text-white">以学生为中心</h3>
								<p class="text-gray-400 text-sm leading-relaxed">
									开放自由的氛围，没有标准答案。我们相信每个学生都有独特的学习路径。
								</p>
							</div>
						</div>
					</CyberCard>
				</ScrollReveal>

				<!-- 理念 2 -->
				<ScrollReveal client:visible variant="slide-left" delay={0.1}>
					<CyberCard client:visible variant="holographic" tiltEnabled className="h-full">
						<div class="flex items-start gap-4">
							<div class="w-16 h-16 bg-gradient-to-br from-neon-blue/20 to-neon-green/20 border border-neon-blue/30
								rounded-xl flex items-center justify-center flex-shrink-0">
								<Icon name="tabler:bulb" class="w-8 h-8 text-neon-blue" />
							</div>
							<div class="space-y-2">
								<h3 class="font-display text-xl font-bold text-white">鼓励大胆探索</h3>
								<p class="text-gray-400 text-sm leading-relaxed">
									允许犯错，包容失败。在探索未知的过程中，错误是最宝贵的学习机会。
								</p>
							</div>
						</div>
					</CyberCard>
				</ScrollReveal>

				<!-- 理念 3 -->
				<ScrollReveal client:visible variant="slide-right" delay={0.2}>
					<CyberCard client:visible variant="holographic" tiltEnabled className="h-full">
						<div class="flex items-start gap-4">
							<div class="w-16 h-16 bg-gradient-to-br from-neon-green/20 to-neon-yellow/20 border border-neon-green/30
								rounded-xl flex items-center justify-center flex-shrink-0">
								<Icon name="tabler:rocket" class="w-8 h-8 text-neon-green" />
							</div>
							<div class="space-y-2">
								<h3 class="font-display text-xl font-bold text-white">科技感与未来感</h3>
								<p class="text-gray-400 text-sm leading-relaxed">
									具有科技感和未来感的设计，激发创新想法诞生，让学习空间成为灵感的孵化器。
								</p>
							</div>
						</div>
					</CyberCard>
				</ScrollReveal>

				<!-- 理念 4 -->
				<ScrollReveal client:visible variant="slide-left" delay={0.3}>
					<CyberCard client:visible variant="holographic" tiltEnabled className="h-full">
						<div class="flex items-start gap-4">
							<div class="w-16 h-16 bg-gradient-to-br from-neon-yellow/20 to-neon-pink/20 border border-neon-yellow/30
								rounded-xl flex items-center justify-center flex-shrink-0">
								<Icon name="tabler:layout-grid" class="w-8 h-8 text-neon-yellow" />
							</div>
							<div class="space-y-2">
								<h3 class="font-display text-xl font-bold text-white">灵活流动的空间</h3>
								<p class="text-gray-400 text-sm leading-relaxed">
									灵活、流动和多样化的学习空间代替隔离、固定的空间。
								</p>
							</div>
						</div>
					</CyberCard>
				</ScrollReveal>
			</div>

			<!-- 特殊理念 - Neo-Brutalism 风格 -->
			<ScrollReveal client:visible variant="brutal" delay={0.4}>
				<div class="mt-10 max-w-5xl mx-auto">
					<div class="relative bg-brutal-yellow text-black border-4 border-black p-8
						shadow-brutal-xl hover:shadow-none hover:translate-x-[12px] hover:translate-y-[12px]
						transition-all duration-300 cursor-default">

						<!-- 角落标签 -->
						<div class="absolute -top-4 -right-4 bg-neon-pink text-white px-4 py-1 font-mono text-xs uppercase border-2 border-black">
							SPECIAL
						</div>

						<div class="flex flex-col md:flex-row items-start gap-6">
							<div class="w-20 h-20 bg-black text-neon-yellow flex items-center justify-center flex-shrink-0">
								<Icon name="tabler:pencil" class="w-10 h-10" />
							</div>
							<div class="space-y-4">
								<h3 class="font-display text-3xl font-black uppercase">
									创意自由区
								</h3>
								<p class="text-lg leading-relaxed">
									留有学生自由涂鸦和可破坏的"混乱"空间。我们相信，真正的创造力需要自由的表达空间，
									<span class="bg-black text-neon-yellow px-2 py-1 font-bold">无拘无束的探索往往带来最意想不到的创新</span>。
								</p>
								<div class="flex flex-wrap gap-3 pt-2">
									<span class="px-4 py-2 bg-black text-neon-purple font-mono text-sm border-2 border-black">
										#自由表达
									</span>
									<span class="px-4 py-2 bg-black text-neon-pink font-mono text-sm border-2 border-black">
										#创意无限
									</span>
									<span class="px-4 py-2 bg-black text-neon-green font-mono text-sm border-2 border-black">
