---
import { SITE } from '~/config';
import { getCanonical, getPermalink } from '~/utils/permalinks';
import Layout from '~/layouts/PageLayout.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const meta = {
	title: '实验室空间 | ' + SITE.title,
	description: '探索猫头鹰实验室的物理空间：深圳坪山基地、清华李兆基空间、深圳南山总部',
	canonical: getCanonical(getPermalink('/spaces')),
};

const spaces = [
	{
		name: '深圳坪山基地',
		subtitle: 'Pingshan Base',
		description: '猫头鹰实验室深圳坪山基地是我们的核心实验空间，配备先进的科研设备和创客工具，为学生提供沉浸式的科研体验环境。',
		features: ['机器人实验室', '3D打印工坊', '电子工程室', '生物实验室'],
		color: 'tech',
		icon: '🏭',
	},
	{
		name: '清华李兆基空间',
		subtitle: 'Tsinghua Lee Shau Kee Space',
		description: '位于清华大学校园内的创新空间，依托清华大学的学术资源，为学生提供与顶尖研究者交流学习的机会。',
		features: ['学术交流中心', '研讨会议室', '图书资源', '导师办公室'],
		color: 'primary',
		icon: '🎓',
	},
	{
		name: '深圳南山总部',
		subtitle: 'Nanshan Headquarters',
		description: '猫头鹰实验室总部所在地，是行政管理和对外交流的中心，也是各类大型活动和展示的主要场所。',
		features: ['多功能展厅', '会议中心', '创意工作室', '休闲交流区'],
		color: 'accent',
		icon: '🏢',
	},
];
---

<Layout {meta}>
	<!-- 页面标题区域 -->
	<section class="relative py-20 overflow-hidden bg-gradient-to-b from-black/0 via-secondary-500/10 to-black/0 dark:from-black/0 dark:via-secondary-500/10 dark:to-black/0">
		<div class="max-w-6xl mx-auto px-4 sm:px-6 relative z-10">
			<div class="text-center">
				<div class="font-mono text-xs text-secondary-400 uppercase tracking-widest mb-6" data-aos="fade-up">
					[ LAB SPACES ]
				</div>
				<h1
					class="text-5xl md:text-6xl font-black text-white mb-6 font-display"
					data-aos="fade-up"
				>
					<span data-i18n="page.spaces.title">实验室空间</span>
				</h1>
				<p
					class="text-xl text-gray-300 dark:text-gray-400 max-w-3xl mx-auto"
					data-aos="fade-up"
					data-aos-delay="200"
					data-i18n="page.spaces.subtitle"
				>
					灵活、流动、多样化的创新学习空间
				</p>
			</div>
		</div>
		<!-- 装饰性背景元素 -->
		<div class="absolute top-1/2 left-1/4 w-64 h-64 bg-secondary-500/5 rounded-full filter blur-3xl -translate-y-1/2"></div>
		<div class="absolute top-1/2 right-1/4 w-64 h-64 bg-primary-500/5 rounded-full filter blur-3xl -translate-y-1/2"></div>
	</section>

	<!-- 空间设计理念 -->
	<section class="relative py-24 overflow-hidden">
		<div class="max-w-6xl mx-auto px-4 sm:px-6">
			<div class="text-center mb-16">
				<h2 class="text-3xl md:text-4xl font-black text-white mb-4 font-display" data-aos="fade-up" data-i18n="spaces.design.title">
					空间设计理念
				</h2>
				<p class="text-gray-400 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="100" data-i18n="spaces.design.subtitle">
					我们相信，优秀的物理空间能够激发创新思维，促进协作与探索
				</p>
			</div>

			<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
				<!-- 理念卡片 1 -->
				<div class="group relative bg-white/5 border border-white/10 rounded-xl p-6 hover:border-primary-500/50 transition-all duration-300" data-aos="fade-up" data-aos-delay="0">
					<div class="w-12 h-12 bg-primary-500/20 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
						<span class="text-xl font-bold text-primary-400">01</span>
					</div>
					<h3 class="text-lg font-bold text-white mb-2" data-i18n="spaces.design.studentCentered">以学生为中心</h3>
					<p class="text-gray-400 text-sm" data-i18n="spaces.design.studentCenteredDesc">开放自由的氛围，没有标准答案，尊重每个学生的独特学习路径</p>
				</div>

				<!-- 理念卡片 2 -->
				<div class="group relative bg-white/5 border border-white/10 rounded-xl p-6 hover:border-tech-500/50 transition-all duration-300" data-aos="fade-up" data-aos-delay="100">
					<div class="w-12 h-12 bg-tech-500/20 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
						<span class="text-xl font-bold text-tech-400">02</span>
					</div>
					<h3 class="text-lg font-bold text-white mb-2" data-i18n="spaces.design.boldExploration">鼓励大胆探索</h3>
					<p class="text-gray-400 text-sm" data-i18n="spaces.design.boldExplorationDesc">允许犯错，包容失败，在探索未知的过程中学习成长</p>
				</div>

				<!-- 理念卡片 3 -->
				<div class="group relative bg-white/5 border border-white/10 rounded-xl p-6 hover:border-accent-500/50 transition-all duration-300" data-aos="fade-up" data-aos-delay="200">
					<div class="w-12 h-12 bg-accent-500/20 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
						<span class="text-xl font-bold text-accent-400">03</span>
					</div>
					<h3 class="text-lg font-bold text-white mb-2" data-i18n="spaces.design.techFuture">科技感与未来感</h3>
					<p class="text-gray-400 text-sm" data-i18n="spaces.design.techFutureDesc">具有科技感和未来感的设计，激发创新想法的诞生</p>
				</div>

				<!-- 理念卡片 4 -->
				<div class="group relative bg-white/5 border border-white/10 rounded-xl p-6 hover:border-secondary-500/50 transition-all duration-300" data-aos="fade-up" data-aos-delay="300">
					<div class="w-12 h-12 bg-secondary-500/20 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
						<span class="text-xl font-bold text-secondary-400">04</span>
					</div>
					<h3 class="text-lg font-bold text-white mb-2" data-i18n="spaces.design.flexible">灵活流动空间</h3>
					<p class="text-gray-400 text-sm" data-i18n="spaces.design.flexibleDesc">灵活、流动和多样化的空间代替隔离、固定的传统布局</p>
				</div>
			</div>

			<!-- 特殊理念 - 创意自由区 -->
			<div class="bg-gradient-to-r from-accent-500/10 to-primary-500/10 border border-accent-500/20 rounded-2xl p-8" data-aos="fade-up">
				<div class="flex flex-col md:flex-row items-start gap-6">
					<div class="w-16 h-16 bg-black/30 rounded-xl flex items-center justify-center flex-shrink-0">
						<span class="text-3xl">~</span>
					</div>
					<div class="flex-1">
						<div class="inline-flex items-center gap-2 px-3 py-1 bg-accent-500/20 rounded-full text-xs text-accent-400 uppercase tracking-wider mb-3">
							Special
						</div>
						<h3 class="text-2xl font-black text-white mb-3" data-i18n="spaces.design.creativeZone">创意自由区</h3>
						<p class="text-gray-300 mb-4 leading-relaxed">
							<span data-i18n="spaces.design.creativeZoneDesc">留有学生自由涂鸦和可破坏的"混乱"空间。我们相信，真正的创造力需要自由的表达空间，</span>
							<span class="text-accent-400 font-medium" data-i18n="spaces.design.creativeZoneHighlight">无拘无束的探索往往带来最意想不到的创新</span>。
						</p>
						<div class="flex flex-wrap gap-3">
							<span class="px-4 py-2 bg-black/30 rounded-full text-sm text-primary-400" data-i18n="home.philosophy.freeExpression">#自由表达</span>
							<span class="px-4 py-2 bg-black/30 rounded-full text-sm text-accent-400" data-i18n="home.philosophy.unlimitedCreativity">#创意无限</span>
							<span class="px-4 py-2 bg-black/30 rounded-full text-sm text-tech-400" data-i18n="home.philosophy.breakRules">#打破常规</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- 空间展示 -->
	<section class="relative py-24 overflow-hidden bg-gradient-to-b from-black/0 via-primary-500/5 to-black/0">
		<div class="max-w-6xl mx-auto px-4 sm:px-6">
			<div class="text-center mb-16">
				<h2 class="text-3xl md:text-4xl font-black text-white mb-4 font-display" data-aos="fade-up" data-i18n="spaces.locations.title">
					我们的空间
				</h2>
				<p class="text-gray-400 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="100" data-i18n="spaces.locations.subtitle">
					分布在深圳和北京的三处核心空间，为学生提供多元化的学习和创新环境
				</p>
			</div>

			<div class="space-y-8">
				{spaces.map((space, index) => (
					<div
						class={`relative bg-white/5 border border-white/10 rounded-2xl overflow-hidden hover:border-${space.color}-500/50 transition-all duration-300`}
						data-aos={index % 2 === 0 ? "fade-right" : "fade-left"}
					>
						<div class="grid lg:grid-cols-3 gap-0">
							<!-- 空间信息 -->
							<div class="lg:col-span-2 p-8 lg:p-12">
								<div class="flex items-center gap-4 mb-6">
									<div class={`w-16 h-16 bg-${space.color}-500/20 rounded-xl flex items-center justify-center`}>
										<span class="text-3xl">{space.icon}</span>
									</div>
									<div>
										<h3 class="text-2xl font-black text-white">{space.name}</h3>
										<p class={`text-${space.color}-400 font-mono text-sm`}>{space.subtitle}</p>
									</div>
								</div>
								<p class="text-gray-300 mb-6 leading-relaxed">{space.description}</p>
								<div class="flex flex-wrap gap-3">
									{space.features.map((feature) => (
										<span class={`px-4 py-2 bg-${space.color}-500/10 border border-${space.color}-500/20 rounded-lg text-sm text-${space.color}-300`}>
											{feature}
										</span>
									))}
								</div>
							</div>
							<!-- 装饰区域 -->
							<div class={`hidden lg:flex items-center justify-center bg-gradient-to-br from-${space.color}-500/10 to-transparent p-8`}>
								<div class="text-center">
									<div class="text-8xl mb-4 opacity-50">{space.icon}</div>
									<div class={`text-${space.color}-400 font-mono text-sm uppercase tracking-wider`}>
										OWL Space
									</div>
								</div>
							</div>
						</div>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- 设施设备 -->
	<section class="relative py-24 overflow-hidden">
		<div class="max-w-6xl mx-auto px-4 sm:px-6">
			<div class="text-center mb-16">
				<h2 class="text-3xl md:text-4xl font-black text-white mb-4 font-display" data-aos="fade-up" data-i18n="spaces.equipment.title">
					设施设备
				</h2>
				<p class="text-gray-400 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="100" data-i18n="spaces.equipment.subtitle">
					配备先进的科研设备和创客工具，支持多领域的探索与创新
				</p>
			</div>

			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
				<!-- 设备类别 -->
				{[
					{ icon: '🤖', name: '机器人与自动化', items: ['工业机械臂', '移动机器人平台', '传感器套件', '控制系统'] },
					{ icon: '🖨️', name: '数字制造', items: ['3D打印机', '激光切割机', 'CNC加工中心', '电子工作站'] },
					{ icon: '🔬', name: '科学研究', items: ['生物实验设备', '化学分析仪器', '光学显微镜', '数据采集系统'] },
					{ icon: '💻', name: '计算与AI', items: ['高性能工作站', 'GPU计算集群', '边缘计算设备', 'IoT开发板'] },
					{ icon: '🎨', name: '创意设计', items: ['专业绘图板', '摄影摄像设备', 'VR/AR设备', '音频工作室'] },
					{ icon: '📚', name: '学习资源', items: ['专业图书馆', '在线课程平台', '研究数据库', '学术期刊'] },
				].map((category, index) => (
					<div
						class="group relative bg-white/5 border border-white/10 rounded-xl p-6 hover:border-primary-500/50 transition-all duration-300"
						data-aos="fade-up"
						data-aos-delay={index * 50}
					>
						<div class="flex items-center gap-3 mb-4">
							<span class="text-2xl">{category.icon}</span>
							<h3 class="text-lg font-bold text-white">{category.name}</h3>
						</div>
						<ul class="space-y-2">
							{category.items.map((item) => (
								<li class="flex items-center gap-2 text-gray-400 text-sm">
									<span class="w-1.5 h-1.5 bg-primary-500 rounded-full"></span>
									{item}
								</li>
							))}
						</ul>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- 行动号召 -->
	<CallToAction />
</Layout>
