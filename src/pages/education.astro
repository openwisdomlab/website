---
import { SITE } from '~/config';
import { getCanonical, getPermalink } from '~/utils/permalinks';
import Layout from '~/layouts/PageLayout.astro';

import IME from '~/components/widgets/IME.astro';
import ProblemDrivenLearning from '~/components/widgets/ProblemDrivenLearning.astro';
import Features from '~/components/widgets/Features.astro';
import Policy from '~/components/widgets/Policy.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const meta = {
	title: '教育体系 | ' + SITE.title,
	description: '了解猫头鹰实验室的创生教育理念和问题驱动学习方法',
	canonical: getCanonical(getPermalink('/education')),
};
---

<Layout {meta}>
	<!-- 页面标题区域 -->
	<section class="relative py-20 overflow-hidden bg-gradient-to-b from-black/0 via-secondary-500/10 to-black/0 dark:from-black/0 dark:via-secondary-500/10 dark:to-black/0">
		<div class="max-w-6xl mx-auto px-4 sm:px-6 relative z-10">
			<div class="text-center">
				<div class="font-mono text-xs text-secondary-400 uppercase tracking-widest mb-6" data-aos="fade-up">
					[ EDUCATION SYSTEM ]
				</div>
				<h1
					class="text-5xl md:text-6xl font-black text-white mb-6 font-display"
					data-aos="fade-up"
				>
					<span data-i18n="page.education.title">教育体系</span>
				</h1>
				<p
					class="text-xl text-gray-300 dark:text-gray-400 max-w-3xl mx-auto"
					data-aos="fade-up"
					data-aos-delay="200"
					data-i18n="page.education.subtitle"
				>
					以问题为驱动，以创新为目标的创生教育理念
				</p>
			</div>
		</div>
		<!-- 装饰性背景元素 -->
		<div class="absolute top-1/2 left-1/4 w-64 h-64 bg-secondary-500/5 rounded-full filter blur-3xl -translate-y-1/2"></div>
		<div class="absolute top-1/2 right-1/4 w-64 h-64 bg-primary-500/5 rounded-full filter blur-3xl -translate-y-1/2"></div>
	</section>

	<!-- 创生教育 (IME) -->
	<IME />

	<!-- 问题驱动学习 -->
	<ProblemDrivenLearning />

	<!-- 教育特色 -->
	<Features />

	<!-- 教育政策 -->
	<Policy />

	<!-- 行动号召 -->
	<CallToAction />
</Layout>
