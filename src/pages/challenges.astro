---
import { SITE } from '~/config';
import { getCanonical, getPermalink } from '~/utils/permalinks';
import Layout from '~/layouts/PageLayout.astro';

import ScientificChallenges from '~/components/widgets/ScientificChallenges.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const meta = {
	title: '科学问题 | ' + SITE.title,
	description: '探索前沿科学问题，培养创新思维和科研能力',
	canonical: getCanonical(getPermalink('/challenges')),
};
---

<Layout {meta}>
	<!-- 页面标题区域 -->
	<section class="relative py-20 overflow-hidden bg-gradient-to-b from-black/0 via-accent-500/10 to-black/0 dark:from-black/0 dark:via-accent-500/10 dark:to-black/0">
		<div class="max-w-6xl mx-auto px-4 sm:px-6 relative z-10">
			<div class="text-center">
				<div class="font-mono text-xs text-accent-400 uppercase tracking-widest mb-6" data-aos="fade-up">
					[ SCIENTIFIC QUESTIONS ]
				</div>
				<h1
					class="text-5xl md:text-6xl font-black text-white mb-6 font-display"
					data-aos="fade-up"
				>
					<span data-i18n="page.challenges.title">科学问题</span>
				</h1>
				<p
					class="text-xl text-gray-300 dark:text-gray-400 max-w-3xl mx-auto"
					data-aos="fade-up"
					data-aos-delay="200"
					data-i18n="page.challenges.subtitle"
				>
					聚焦前沿科学问题，在真实挑战中探索未知
				</p>
			</div>
		</div>
		<!-- 装饰性背景元素 -->
		<div class="absolute top-1/2 left-1/4 w-64 h-64 bg-accent-500/5 rounded-full filter blur-3xl -translate-y-1/2"></div>
		<div class="absolute top-1/2 right-1/4 w-64 h-64 bg-tech-500/5 rounded-full filter blur-3xl -translate-y-1/2"></div>
		</div>
	</section>

	<!-- 科学挑战总览 -->
	<ScientificChallenges />

	<!-- 挑战特色和方法 -->
	<Features2 />

	<!-- 更多特色 -->
	<Features3 />

	<!-- 行动号召 -->
	<CallToAction />
</Layout>
