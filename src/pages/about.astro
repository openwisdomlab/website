---
import { SITE } from '~/config';
import { getCanonical, getPermalink } from '~/utils/permalinks';
import Layout from '~/layouts/PageLayout.astro';
import { GlitchText, ScrollReveal, GridBackground, NoiseOverlay } from '~/components/ui/cyber';

import Vision from '~/components/widgets/Vision.astro';
import Context from '~/components/widgets/Context.astro';
import Stats from '~/components/widgets/Stats.astro';
import Note from '~/components/widgets/Note.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const meta = {
	title: '关于我们 | ' + SITE.title,
	description: '了解猫头鹰实验室的愿景、使命和发展历程',
	canonical: getCanonical(getPermalink('/about')),
};
---

<Layout {meta}>
	<!-- Global Noise -->
	<NoiseOverlay client:load opacity={0.02} />

	<!-- 页面标题区域 -->
	<section class="relative py-20 overflow-hidden bg-white dark:bg-cyber-black transition-colors duration-300">
		<!-- Dynamic Grid Background -->
		<div class="hidden dark:block">
			<GridBackground client:load variant="cyber" animated />
		</div>

		<!-- Light Mode Grid -->
		<div class="absolute inset-0 dark:hidden bg-[linear-gradient(to_right,#f0f0f0_1px,transparent_1px),linear-gradient(to_bottom,#f0f0f0_1px,transparent_1px)] bg-[size:40px_40px]"></div>

		<div class="max-w-6xl mx-auto px-4 sm:px-6 relative z-10">
			<div class="text-center">
				<ScrollReveal client:visible variant="slide-down">
					<div class="inline-block px-4 py-1 mb-6 border-2 border-black dark:border-neon-blue/30 bg-white dark:bg-black/50 backdrop-blur">
						<span class="font-mono text-xs md:text-sm text-black dark:text-neon-blue uppercase tracking-[0.3em] font-bold">
							[ ABOUT_US::INIT ]
						</span>
					</div>
				</ScrollReveal>

				<ScrollReveal client:visible variant="brutal" delay={0.1}>
					<h1 class="text-5xl md:text-7xl font-black text-black dark:text-white mb-8 font-display tracking-tighter">
						<span class="dark:hidden" data-i18n="page.about.title">关于我们</span>
						<span class="hidden dark:block">
							<GlitchText client:visible variant="rgb" triggerOnHover>
								<span data-i18n="page.about.title">关于我们</span>
							</GlitchText>
						</span>
					</h1>
				</ScrollReveal>

				<ScrollReveal client:visible variant="slide-up" delay={0.2}>
					<div class="max-w-3xl mx-auto">
						<div class="bg-white dark:bg-black/60 border-4 border-black dark:border-neon-purple/50 p-6 md:p-8 shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] dark:shadow-[0_0_20px_rgba(191,0,255,0.2)] backdrop-blur-sm">
							<p class="text-xl md:text-2xl text-slate-800 dark:text-gray-300 font-medium leading-relaxed font-mono" data-i18n="page.about.subtitle">
								// 探索未知 · 激发潜能<br/>
								<span class="text-indigo-600 dark:text-neon-purple font-bold mt-2 block">培养未来的创新人才</span>
							</p>
						</div>
					</div>
				</ScrollReveal>
			</div>
		</div>
	</section>

	<!-- 愿景和使命 -->
	<Vision />

	<!-- 发展背景 -->
	<Context />

	<!-- 数据统计 -->
	<Stats />

	<!-- 重要说明 -->
	<Note />

	<!-- 行动号召 -->
	<CallToAction />
</Layout>
