---
/**
 * Activity Gallery Component
 * Displays a grid of activity photos from the lab
 */
import { Image } from 'astro:assets';
import roboticsLabSession from '~/assets/images/activities/robotics-lab-session.png';
import marsSpacesuitDesign from '~/assets/images/activities/mars-spacesuit-design.jpg';

interface Props {
	title?: string;
	subtitle?: string;
	images?: Array<{
		src: ImageMetadata;
		alt: string;
	}>;
	variant?: 'grid' | 'masonry';
}

const {
	title = '实验室活动',
	subtitle = '探索、创造、成长的精彩瞬间',
	images = [],
	variant = 'grid',
} = Astro.props;

// Activity photos from the lab - using imported images for proper Astro asset handling
const defaultImages = [
	{ src: roboticsLabSession, alt: '学生参与机器人实验室实践活动' },
	{ src: marsSpacesuitDesign, alt: '火星宇航服原创设计项目展示' },
];

const displayImages = images.length > 0 ? images : defaultImages;
---

<section class="relative py-24 overflow-hidden">
	<div class="max-w-7xl mx-auto px-4 sm:px-6">
		<!-- Section Header -->
		<div class="text-center mb-16">
			<div class="font-mono text-xs text-primary-400 uppercase tracking-widest mb-4">
				[ ACTIVITY GALLERY ]
			</div>
			<h2 class="font-display font-black text-5xl md:text-6xl text-white mb-4">
				{title}
			</h2>
			<p class="text-lg text-gray-400 max-w-2xl mx-auto">
				{subtitle}
			</p>
		</div>

		<!-- Image Grid -->
		{variant === 'grid' ? (
			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
				{displayImages.map((image, index) => (
					<div
						class="group relative aspect-video overflow-hidden rounded-xl bg-dark-surface border border-white/5 hover:border-primary-500/30 transition-all duration-300"
						data-aos="fade-up"
						data-aos-delay={index * 100}
					>
						<div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity z-10"></div>
						<Image
							src={image.src}
							alt={image.alt}
							class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
							loading="lazy"
						/>
						<div class="absolute bottom-0 left-0 right-0 p-6 z-20 translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
							<p class="text-white font-medium text-sm">{image.alt}</p>
						</div>
					</div>
				))}
			</div>
		) : (
			<div class="columns-1 md:columns-2 lg:columns-3 gap-6 space-y-6">
				{displayImages.map((image, index) => (
					<div
						class="group relative break-inside-avoid overflow-hidden rounded-xl bg-dark-surface border border-white/5 hover:border-primary-500/30 transition-all duration-300"
						data-aos="fade-up"
						data-aos-delay={index * 100}
					>
						<div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity z-10"></div>
						<Image
							src={image.src}
							alt={image.alt}
							class="w-full h-auto object-cover group-hover:scale-110 transition-transform duration-500"
							loading="lazy"
						/>
						<div class="absolute bottom-0 left-0 right-0 p-6 z-20 translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
							<p class="text-white font-medium text-sm">{image.alt}</p>
						</div>
					</div>
				))}
			</div>
		)}

	</div>
</section>

<style>
	/* Masonry layout responsive adjustments */
	@media (max-width: 768px) {
		.columns-1 {
			columns: 1;
		}
	}
</style>
