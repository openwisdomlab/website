---
import { Icon } from 'astro-icon/components';
import { ScrollReveal } from '~/components/ui/cyber';

const items = [
	[
		{
			questionKey: 'faq.q1',
			answerKey: 'faq.a1',
		},
		{
			questionKey: 'faq.q2',
			answerKey: 'faq.a2',
		},
		{
			questionKey: 'faq.q3',
			answerKey: 'faq.a3',
		},
	],
	[
		{
			questionKey: 'faq.q4',
			answerKey: 'faq.a4',
		},
		{
			questionKey: 'faq.q5',
			answerKey: 'faq.a5',
		},
		{
			questionKey: 'faq.q6',
			answerKey: 'faq.a6',
		},
	],
];
---

<div class="mx-auto max-w-6xl bg-slate-50 px-4 py-16 transition-colors duration-300 dark:bg-cyber-black lg:py-20">
	<div class="max-w-xl sm:mx-auto lg:max-w-2xl">
		<ScrollReveal client:visible variant="slide-up">
			<div class="mb-10 max-w-xl sm:text-center md:mx-auto md:mb-12 lg:max-w-2xl">
				<h2
					class="mb-4 inline-block max-w-lg border-b-4 border-black pb-2 font-display text-3xl font-black uppercase leading-none tracking-tight text-black dark:border-white dark:text-white sm:text-4xl md:mx-auto"
					data-i18n="faq.title"
				>
					常见问题
				</h2>
			</div>
		</ScrollReveal>
	</div>
	<div class="max-w-screen-xl sm:mx-auto">
		<div class="grid grid-cols-1 gap-x-8 gap-y-8 md:grid-cols-2 lg:gap-x-16">
			{
				items.map((subitems, colIndex) => (
					<div class="space-y-8">
						{subitems.map(({ questionKey, answerKey }, itemIndex) => (
							<ScrollReveal client:visible variant="brutal" delay={colIndex * 0.2 + itemIndex * 0.1}>
								<div class="border-4 border-black bg-white p-6 shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] transition-all duration-200 hover:translate-x-[4px] hover:translate-y-[4px] hover:shadow-none dark:border-slate-700 dark:bg-black/40 dark:shadow-[0_0_20px_rgba(255,255,255,0.05)]">
									<p class="mb-4 font-display text-xl font-black text-black dark:text-white">
										<Icon
											name="tabler:help-octagon"
											class="mb-1 mr-2 inline-block h-7 w-7 text-indigo-600 dark:text-neon-blue"
										/>
										<span data-i18n={questionKey} />
									</p>
									<div class="border-l-4 border-indigo-200 pl-9 dark:border-neon-blue/30">
										<p
											class="mb-2 font-medium leading-relaxed text-slate-700 dark:text-slate-300"
											data-i18n={answerKey}
										/>
									</div>
								</div>
							</ScrollReveal>
						))}
					</div>
				))
			}
		</div>
	</div>
</div>
