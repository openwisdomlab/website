---
import { Icon } from 'astro-icon/components';
import { getHomePermalink, getRelativeLink } from '~/utils/permalinks';

const links = [
	{
		title: '探索',
		titleKey: 'footer.explore',
		items: [
			{ title: '关于我们', titleKey: 'footer.aboutUs', href: '/about' },
			{ title: '课程体系', titleKey: 'footer.curriculum', href: '/curriculum' },
			{ title: '科学问题', titleKey: 'footer.challenges', href: '/challenges' },
		],
	},
	{
		title: '空间',
		titleKey: 'footer.spaces',
		items: [
			{ title: '实验室空间', titleKey: 'footer.labSpaces', href: '/spaces' },
			{ title: '深圳坪山基地', titleKey: 'footer.pingshanBase', href: '/spaces' },
			{ title: '清华李兆基空间', titleKey: 'footer.tsinghuaSpace', href: '/spaces' },
		],
	},
	{
		title: '活动',
		titleKey: 'footer.activities',
		items: [
			{ title: '特色活动', titleKey: 'footer.featuredActivities', href: '/activities' },
			{ title: 'X-Camp', titleKey: 'footer.xcamp', href: '/activities' },
			{ title: '猫头鹰奇妙夜', titleKey: 'footer.nightAtOwl', href: '/activities' },
		],
	},
	{
		title: '资源',
		titleKey: 'footer.resources',
		items: [
			{ title: '最新动态', titleKey: 'footer.latestNews', href: '/blog' },
			{ title: '联系我们', titleKey: 'footer.contactUs', href: '/contact' },
			{ title: '加入我们', titleKey: 'footer.joinUs', href: '/contact' },
		],
	},
];

const social = [
	{ label: 'WeChat', icon: 'tabler:brand-wechat', href: '#' },
	{ label: 'Bilibili', icon: 'tabler:brand-bilibili', href: '#' },
	{ label: 'Github', icon: 'tabler:brand-github', href: 'https://github.com/openwisdomlab' },
	{ label: 'RSS', icon: 'tabler:rss', href: getRelativeLink('/rss.xml') },
];
---

<footer class="border-t-4 border-black dark:border-white/10 bg-white dark:bg-cyber-black">
	<div class="max-w-6xl mx-auto px-4 sm:px-6">
		<div class="grid grid-cols-12 gap-4 gap-y-8 sm:gap-8 py-8 md:py-12">
			<div class="col-span-12 lg:col-span-4">
				<div class="mb-2">
					<a class="inline-block font-display font-black text-xl text-black dark:text-white uppercase tracking-wider" href={getHomePermalink()} data-i18n="home.hero.owl">猫头鹰实验室</a>
				</div>
				<div class="text-sm font-mono text-slate-600 dark:text-slate-400 mb-4">
					Open Wisdom Lab
				</div>
				<div class="text-sm text-slate-600 dark:text-slate-400 font-medium" data-i18n="footer.slogan">
					让有好奇心的人、天马行空的想法和有趣的问题在此汇聚和激发
				</div>
			</div>
			{
				links.map(({ title, titleKey, items }) => (
					<div class="col-span-6 md:col-span-3 lg:col-span-2">
						<div class="text-black dark:text-white font-bold font-display mb-2 uppercase tracking-wide" data-i18n={titleKey}>{title}</div>
						{items && Array.isArray(items) && items.length > 0 && (
							<ul class="text-sm font-mono">
								{items.map(({ title, titleKey, href }) => (
									<li class="mb-2">
										<a
											class="text-slate-600 hover:text-indigo-600 hover:underline decoration-2 decoration-indigo-300 underline-offset-4 dark:text-slate-400 dark:hover:text-neon-blue transition-all duration-200"
											href={href}
											data-i18n={titleKey}
										>
											{title}
										</a>
									</li>
								))}
							</ul>
						)}
					</div>
				))
			}
		</div>
		<div class="md:flex md:items-center md:justify-between py-6 md:py-8 border-t-2 border-slate-100 dark:border-slate-800">
			<ul class="flex mb-4 md:order-1 -ml-2 md:ml-4 md:mb-0 gap-2">
				{
					social.map(({ label, href, icon }) => (
						<li>
							<a
								class="text-black dark:text-white hover:bg-black hover:text-white dark:hover:bg-white dark:hover:text-black border-2 border-transparent hover:border-black dark:hover:border-white rounded-none text-sm p-2 inline-flex items-center transition-all duration-200"
								aria-label={label}
								href={href}
							>
								<Icon name={icon} class="w-5 h-5" />
							</a>
						</li>
					))
				}
			</ul>

			<div class="text-sm font-mono text-slate-500 mr-4 dark:text-slate-500">
				© {new Date().getFullYear()} 猫头鹰实验室 · Open Wisdom Lab
			</div>
		</div>
	</div>
</footer>
