---
import { Icon } from 'astro-icon/components';
import { getHomePermalink, getRelativeLink } from '~/utils/permalinks';

const links = [
	{
		title: '探索',
		items: [
			{ title: '关于我们', href: '/about' },
			{ title: '课程体系', href: '/curriculum' },
			{ title: '科学问题', href: '/challenges' },
		],
	},
	{
		title: '空间',
		items: [
			{ title: '实验室空间', href: '/spaces' },
			{ title: '深圳坪山基地', href: '/spaces' },
			{ title: '清华李兆基空间', href: '/spaces' },
		],
	},
	{
		title: '活动',
		items: [
			{ title: '特色活动', href: '/activities' },
			{ title: 'X-Camp', href: '/activities' },
			{ title: '猫头鹰奇妙夜', href: '/activities' },
		],
	},
	{
		title: '资源',
		items: [
			{ title: '最新动态', href: '/blog' },
			{ title: '联系我们', href: '/contact' },
			{ title: '加入我们', href: '/contact' },
		],
	},
];

const social = [
	{ label: 'WeChat', icon: 'tabler:brand-wechat', href: '#' },
	{ label: 'Bilibili', icon: 'tabler:brand-bilibili', href: '#' },
	{ label: 'Github', icon: 'tabler:brand-github', href: 'https://github.com/openwisdomlab' },
	{ label: 'RSS', icon: 'tabler:rss', href: getRelativeLink('/rss.xml') },
];
---

<footer class="border-t border-gray-200 dark:border-dark-border bg-background-light dark:bg-dark-surface">
	<div class="max-w-6xl mx-auto px-4 sm:px-6">
		<div class="grid grid-cols-12 gap-4 gap-y-8 sm:gap-8 py-8 md:py-12">
			<div class="col-span-12 lg:col-span-4">
				<div class="mb-2">
					<a class="inline-block font-bold text-xl text-text-primary dark:text-white" href={getHomePermalink()}>猫头鹰实验室</a>
				</div>
				<div class="text-sm text-text-secondary dark:text-slate-400 mb-4">
					Open Wisdom Lab
				</div>
				<div class="text-sm text-text-secondary dark:text-slate-400">
					让有好奇心的人、天马行空的想法和有趣的问题在此汇聚和激发
				</div>
			</div>
			{
				links.map(({ title, items }) => (
					<div class="col-span-6 md:col-span-3 lg:col-span-2">
						<div class="text-text-primary dark:text-slate-300 font-medium mb-2">{title}</div>
						{items && Array.isArray(items) && items.length > 0 && (
							<ul class="text-sm">
								{items.map(({ title, href }) => (
									<li class="mb-2">
										<a
											class="text-text-secondary hover:text-holographic-blue hover:underline dark:text-slate-400 dark:hover:text-white transition-all duration-200"
											href={href}
										>
											{title}
										</a>
									</li>
								))}
							</ul>
						)}
					</div>
				))
			}
		</div>
		<div class="md:flex md:items-center md:justify-between py-6 md:py-8">
			<ul class="flex mb-4 md:order-1 -ml-2 md:ml-4 md:mb-0">
				{
					social.map(({ label, href, icon }) => (
						<li>
							<a
								class="text-text-secondary dark:text-slate-400 hover:text-holographic-blue dark:hover:text-white hover:bg-zinc-100 dark:hover:bg-slate-700 focus:outline-none focus:ring-2 focus:ring-primary-500 rounded-lg text-sm p-2.5 inline-flex items-center transition-all duration-200"
								aria-label={label}
								href={href}
							>
								<Icon name={icon} class="w-5 h-5" />
							</a>
						</li>
					))
				}
			</ul>

			<div class="text-sm text-text-secondary mr-4 dark:text-slate-400">
				© {new Date().getFullYear()} 猫头鹰实验室 · Open Wisdom Lab · All rights reserved.
			</div>
		</div>
	</div>
</footer>
