---
import { Icon } from 'astro-icon/components';
import Logo from '~/components/atoms/Logo.astro';
import ToggleTheme from '~/components/core/ToggleTheme.astro';
import ToggleMenu from '~/components/core/ToggleMenu.astro';
import LanguageSwitch from '~/components/core/LanguageSwitch.astro';

import { getHomePermalink, getBlogPermalink, getPermalink, getRelativeLink } from '~/utils/permalinks';
---

<header
	class="sticky top-0 z-40 flex-none mx-auto w-full bg-white/80 backdrop-blur-md border-b border-gray-200 dark:bg-cyber-black/80 dark:border-white/10 shadow-soft dark:shadow-glow transition-all duration-300"
	id="header"
>
	<div class="py-3 px-3 mx-auto w-full md:flex md:justify-between max-w-6xl md:px-4">
		<div class="flex justify-between">
			<a class="flex items-center" href={getHomePermalink()}>
				<Logo />
			</a>
			<div class="flex items-center md:hidden">
				<ToggleTheme />
				<ToggleMenu />
			</div>
		</div>
		<nav
			class="items-center w-full md:w-auto hidden md:flex text-text-secondary dark:text-slate-200 h-[calc(100vh-100px)] md:h-auto overflow-y-auto md:overflow-visible"
			aria-label="Main navigation"
		>
			<ul class="flex flex-col pt-8 md:pt-0 md:flex-row md:self-center w-full md:w-auto text-xl md:text-base">
				<li>
					<a
						class="font-medium hover:text-text-primary dark:hover:text-white px-4 py-3 flex items-center transition-all duration-200 rounded-lg hover:bg-zinc-50 dark:hover:bg-slate-800"
						href={getHomePermalink()}
						><span data-i18n="nav.home">首页</span>
					</a>
				</li>
				<li>
					<a
						class="font-medium hover:text-text-primary dark:hover:text-white px-4 py-3 flex items-center transition-all duration-200 rounded-lg hover:bg-zinc-50 dark:hover:bg-slate-800"
						href={getPermalink('/about')}
						><span data-i18n="nav.about">关于我们</span>
					</a>
				</li>
				<li>
					<a
						class="font-medium hover:text-text-primary dark:hover:text-white px-4 py-3 flex items-center transition-all duration-200 rounded-lg hover:bg-zinc-50 dark:hover:bg-slate-800"
						href={getPermalink('/curriculum')}
						><span data-i18n="nav.curriculum">课程体系</span>
					</a>
				</li>
				<li>
					<a
						class="font-medium hover:text-text-primary dark:hover:text-white px-4 py-3 flex items-center transition-all duration-200 rounded-lg hover:bg-zinc-50 dark:hover:bg-slate-800"
						href={getPermalink('/challenges')}
						><span data-i18n="nav.challenges">科学问题</span>
					</a>
				</li>
				<li>
					<a
						class="font-medium hover:text-text-primary dark:hover:text-white px-4 py-3 flex items-center transition-all duration-200 rounded-lg hover:bg-zinc-50 dark:hover:bg-slate-800"
						href={getPermalink('/activities')}
						><span data-i18n="nav.activities">特色活动</span>
					</a>
				</li>
				<li>
					<a
						class="font-medium hover:text-text-primary dark:hover:text-white px-4 py-3 flex items-center transition-all duration-200 rounded-lg hover:bg-zinc-50 dark:hover:bg-slate-800"
						href={getPermalink('/spaces')}
						><span data-i18n="nav.spaces">实验室空间</span>
					</a>
				</li>
				<li>
					<a
						class="font-medium hover:text-text-primary dark:hover:text-white px-4 py-3 flex items-center transition-all duration-200 rounded-lg hover:bg-zinc-50 dark:hover:bg-slate-800"
						href={getBlogPermalink()}><span data-i18n="nav.blog">动态</span></a
					>
				</li>
				<li class="md:hidden">
					<a
						class="font-bold hover:text-text-primary dark:hover:text-white px-4 py-3 flex items-center transition-all duration-200 rounded-lg hover:bg-zinc-50 dark:hover:bg-slate-800"
						href={getPermalink('/contact')}
						><span data-i18n="nav.contact">联系我们</span>
					</a>
				</li>
			</ul>
			<div class="md:self-center flex items-center mb-4 md:mb-0 ml-2">
				<div class="hidden items-center md:flex gap-1">
					<LanguageSwitch />
					<ToggleTheme iconClass="w-5 h-5" />
					<a
						class="text-text-secondary dark:text-slate-400 hover:text-text-primary dark:hover:text-white hover:bg-zinc-100 dark:hover:bg-slate-700 focus:outline-none focus:ring-2 focus:ring-primary-500 rounded-lg text-sm p-2.5 inline-flex items-center transition-all duration-200"
						aria-label="RSS Feed"
						href={getRelativeLink('/rss.xml')}
					>
						<Icon name="tabler:rss" class="w-5 h-5" />
					</a>
					<a
						href="#contact"
						class="inline-block text-text-secondary dark:text-slate-400 hover:text-text-primary dark:hover:text-white hover:bg-zinc-100 dark:hover:bg-slate-700 focus:outline-none focus:ring-2 focus:ring-primary-500 rounded-lg text-sm p-2.5 transition-all duration-200"
						aria-label="联系我们"
					>
						<Icon name="tabler:mail" class="w-5 h-5" />
					</a>
				</div>
			</div>
		</nav>
	</div>
</header>
