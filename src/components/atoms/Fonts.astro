---
import '@fontsource-variable/inter';
import '@fontsource/syne/400.css';
import '@fontsource/syne/500.css';
import '@fontsource/syne/600.css';
import '@fontsource/syne/700.css';
import '@fontsource/syne/800.css';
import '@fontsource/jetbrains-mono/400.css';
import '@fontsource/jetbrains-mono/500.css';
import '@fontsource/jetbrains-mono/600.css';
import '@fontsource/jetbrains-mono/700.css';
---

<!-- 引入更炫酷的字体 -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style is:global>
  :root {
    /* 主标题使用 Syne - 夸张的非衬线字体，赛博未来感 */
    --font-heading: 'Syne', 'Inter Variable', sans-serif;
    /* 副标题使用 Space Grotesk - 现代几何感 */
    --font-subheading: 'Space Grotesk', 'Inter Variable', sans-serif;
    /* 正文使用 Inter Variable - 优秀的可读性 */
    --font-body: 'Inter Variable', sans-serif;
    /* 数字和代码使用 JetBrains Mono - 等宽字体，增强代码感和科技感 */
    --font-mono: 'JetBrains Mono', monospace;
    /* 特殊装饰文字使用 Syne - 前卫未来主义 */
    --font-display: 'Syne', sans-serif;
  }

  /* 应用字体到对应元素 */
  h1, h2, .font-heading {
    font-family: var(--font-heading);
    letter-spacing: -0.02em;
    font-weight: 700;
  }

  h3, h4, h5, h6 {
    font-family: var(--font-subheading);
    letter-spacing: -0.01em;
  }

  body {
    font-family: var(--font-body);
  }

  code, pre, .font-mono {
    font-family: var(--font-mono);
  }

  .display-text {
    font-family: var(--font-display);
    font-weight: 600;
  }

  /* 增强标题的视觉效果 - 赛博朋克风格 */
  h1 {
    font-size: clamp(2.5rem, 5vw, 6rem);
    line-height: 1;
    font-weight: 800;
    letter-spacing: -0.04em;
  }

  h2 {
    font-size: clamp(2rem, 4vw, 4rem);
    line-height: 1.1;
    font-weight: 700;
    letter-spacing: -0.03em;
  }

  /* 霓虹渐变文字效果 */
  .text-neon-gradient {
    background: linear-gradient(135deg, #BF00FF 0%, #00F0FF 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* 赛博渐变文字效果 */
  .text-cyber-gradient {
    background: linear-gradient(135deg, #6366F1 0%, #D946EF 50%, #00F0FF 100%);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* 暗色模式下保持相同的霓虹效果 */
  .dark h1, .dark h2 {
    /* 暗色模式下使用更亮的颜色 */
  }
</style>
